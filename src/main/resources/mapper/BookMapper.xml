<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maxiangyu.code.mapper.BookMapper">
    <!--    保存图书-->
    <insert id="save">
        insert into book(id,code,author,title,content,publication_date) values(#{id},#{code},#{author},#{title},#{content},#{publicationDate})
    </insert>

    <select id="getAllBooks" resultType="com.maxiangyu.code.entity.Book">
        select * from book
        <where>
            title like concat (#{title},"%")
        </where>
    </select>
</mapper>
